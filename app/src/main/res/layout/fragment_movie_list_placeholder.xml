<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movie.MovieListFragment"
    android:id="@+id/frame_movie">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:backgroundTint="@color/md_theme_light_surface">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                style="?attr/collapsingToolbarLayoutMediumStyle"
                android:layout_width="match_parent"
                android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
                app:title="@string/movies_home_title"
                android:backgroundTint="@color/md_theme_light_surface"
                app:collapsedTitleTextColor="@color/md_theme_light_onSurfaceVariant"
                app:expandedTitleTextColor="@color/md_theme_light_onSurfaceVariant"
                app:expandedTitleTextAppearance="@style/expandedTitleTextAppearance"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/main_toolbar_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:backgroundTint="@color/md_theme_light_surface"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="?attr/collapsingToolbarLayoutLargeSize">

            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
            <include layout="@layout/card_movie_placeholder"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>